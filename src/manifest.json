
{
   "name": "HATTER",
   "description" : "Project ALICE Data Logging Extension",
   "version": "0.2",
   "manifest_version": 2,
   "options_page": "options.html",
   "background": {
      "persistent": false,
      "scripts": [
      "background.bundle.js"
  ]
   },
   "icons": {
     "28": "on.png"
   },
   "permissions": [
     "webNavigation",
     "tabs",
     "windows",
     "storage",
     "identity",
     "identity.email",
     "activeTab",
     "http://*/",
     "https://*/"

   ],
   "browser_action": {
     "default_title": "HATTER",
     "default_icon": "on.png",
     "default_popup": "popup.html"
    },
   "commands": {
      "annotate": {
       "suggested_key": {
          "default": "Ctrl+0",
          "windows": "Ctrl+0",
          "mac": "Command+0"
        },
       "description": "Toggle feature foo"
     },
     "_execute_browser_action": {
            "suggested_key": {
              "default": "Ctrl+B",
              "windows": "Ctrl+B",
              "mac": "Command+B"
            }
          }
    },
   "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js":["contentscript.bundle.js"],
      "run_at":"document_idle"
    }
  ],
   "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com https://code.jquery.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://stackpath.bootstrapcdn.com; object-src 'self'"
 }
